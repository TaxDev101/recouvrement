pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: '607bc2c7-089e-423a-88ad-7b97cf3f9574', url: 'https://github.com/TaxDev101/recouvrement.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Containerize') {
            steps {
                sh 'docker build -t recover-image .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 80:80 --name recov-container recover-image'
            }
        }
    }
}
