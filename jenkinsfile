pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/TaxDev101/recouvrement.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Containerize') {
            steps {
                sh 'docker build -t recouvrement-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 3000:3000 recouvrement-app'
            }
        }
    }
}
